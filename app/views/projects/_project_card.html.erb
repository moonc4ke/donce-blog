<a href="<%= project.html_url %>" class="project-card" target="_blank">
  <span class="project-card__border-outline"></span>

  <div class="project-card__content-wrapper">
    <div class="project-card__content">
      <h3 class="project-card__title"><%= project.name %></h3>
      <p><%= project.description %></p>
      <div class="project-meta">
        <span class="project-stats">
          <% if project.stargazers_count && project.stargazers_count > 0 %>
            <span class="project-star-icon">⭐</span>
            <%= project.stargazers_count %>
          <% else %>
            No stars yet 🌱
          <% end %>
        </span>
        <% if project.language.present? %>
          <span class="project-language">
            <%= project.language %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</a>
