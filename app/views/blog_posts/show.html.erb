<%= link_to "Edit", edit_blog_post_path(@blog_post) if authenticated? %>

<div class="blog-post">
  <nav class="blog-post__actions">
    <%= link_to "Edit", edit_blog_post_path(@blog_post) if authenticated? %>
  </nav>

  <article class="blog-post__content">
    <h1 class="blog-post__title"><%= @blog_post.title %></h1>
    <div class="blog-post__body">
      <%= markdown(@blog_post.body).html_safe %>
    </div>
  </article>
</div>
