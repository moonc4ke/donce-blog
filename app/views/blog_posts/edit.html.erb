<h1>Edit blog post</h1>

<%= render partial: "form", locals: { blog_post: @blog_post } %>

<div class="blog-post-actions">
  <%= button_to "Update Blog post", 
                blog_post_path(@blog_post), 
                method: :patch, 
                params: { 
                  blog_post: { 
                    title: @blog_post.title, 
                    body: @blog_post.body, 
                    published_at: @blog_post.published_at 
                  } 
                }, 
                class: 'btn blog-post-form__submit' %>

  <%= button_to "Delete", 
                @blog_post, 
                method: :delete, 
                data: { turbo_confirm: "Are you sure?" }, 
                class: 'btn btn--delete' %>
</div>
