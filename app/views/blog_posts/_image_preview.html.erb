<% if blog_post&.persisted? %>
  <% blog_post.images.each do |image| %>
    <%= render "blog_posts/image_preview_item", image: image, blog_post: blog_post %>
  <% end %>
<% elsif @temp_blobs&.any? %>
  <% @temp_blobs.each do |blob| %>
    <%= render "blog_posts/image_preview_item", 
              blob: blob, 
              temp_key: @temp_key %>
  <% end %>
<% end %>
