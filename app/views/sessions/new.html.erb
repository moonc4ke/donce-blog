<h1>Log in</h1>

<%= tag.div(flash[:alert], class: "alert alert--error") if flash[:alert] %>
<%= tag.div(flash[:notice], class: "alert alert--success") if flash[:notice] %>

<%= form_with url: session_path, class: "sign-in-form" do |form| %>
  <%= form.email_field :email_address, class: "sign-in-form__input", required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address] %><br>
  <%= form.password_field :password, class: "sign-in-form__input", required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72 %><br>
  <%= form.submit "Sign in" %>
<% end %>
<br>

<%= link_to "Forgot password?", new_password_path %>
